model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  role      Role
  createdAt DateTime  @default(now())
  company   Company? @relation(fields: [companyId], references: [id])
  companyId Int?

  posts     Post[]
}

enum Role {
  ADMIN
  USER
  BLOGGER
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  address   String
  users     User[]
}